{
    "name": "wildwolf/wp-jwt-auth",
    "type": "wordpress-plugin",
    "description": "WordPress plugin for JWT authentication for the REST API",
    "keywords": ["wordpress", "jwt", "rest", "authentication", "plugin", "security"],
    "license": "MIT",
    "authors": [
        {
            "name": "Volodymyr Kolesnykov",
            "homepage": "https://wildwolf.name/"
        }
    ],
    "archive": {
        "exclude": [
            "/build",
            "/wordpress",
            "/wordpress-tests-lib",
            "/composer.*",
            "/.gitignore"
        ]
    },
    "autoload": {
        "psr-4": {
            "WildWolf\\JwtAuth\\": "inc/"
        }
    },
    "require": {
        "php": ">= 7.2",
        "firebase/php-jwt": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.14",
        "johnpbloch/wordpress": "^5.5"
    }
}
